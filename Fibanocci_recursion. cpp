//fibanocci using recursion!!

#include<iostream.h>
void fib(int f,int l,int n)
{
	if(n<=0)
	{
		return;
	}
	cout<<f+l<<" ";
	fib(l,f+l,n-1);
}

int main(int argc, char *argv[])
{  
    int n;
	cout<<"enter fibanocci limit:";
	cin>>n;
	if(n>2)
	{
	cout<<endl<<0<<" "<<1<<" ";
	fib(0,1,n-2);
	}
	else if(n==2)
	{
		cout<<0<<" "<<1;
	}
	else if(n==1)
	{
		cout<<0;
	}
   else
   {
   cout<<"enter a posive integer!!!";
   }
}
